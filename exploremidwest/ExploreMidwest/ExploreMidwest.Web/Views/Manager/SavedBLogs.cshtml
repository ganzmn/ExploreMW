@model IEnumerable<ExploreMidwest.Model.Blog>

@{
    ViewBag.Title = "Saved Blogs";
}

<h2>Saved Blogs</h2>

<p>
    @Html.ActionLink("Create New", "AddBlog")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Body)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Body)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditBlog", new { id=item.BlogId }) |
            @Html.ActionLink("Delete", "DeleteBlog", new { id=item.BlogId })
        </td>
    </tr>
}

</table>
