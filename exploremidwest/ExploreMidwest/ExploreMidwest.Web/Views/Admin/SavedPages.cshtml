@model IEnumerable<ExploreMidwest.Model.Page>

@{
    ViewBag.Title = "SavedPages";
}

<h2>Page Manager</h2>

<p>
    @Html.ActionLink("Create New", "AddPage")
</p>
<table class="table">
    <tr>
        <th style="width:20%">
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th style="width:60%">
            @Html.DisplayNameFor(model => model.Body)
        </th>
        <th style="width:10%">
            Publish Status
        </th>
        <th style="width:10%"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td class="pgBody">
            @Html.DisplayFor(modelItem => item.Body)
        </td>
        <td>
            @if (item.IsFinished == true)
            {
                <p>Published</p>
            }
            else
            {
                <p style="color:red">Not Published</p>
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "EditPage", new { id=item.PageId }) |
            @Html.ActionLink("Delete", "DeletePage", new { id=item.PageId })
        </td>
    </tr>
}
</table>
