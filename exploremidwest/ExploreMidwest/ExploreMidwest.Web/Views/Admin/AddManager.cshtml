@model ExploreMidwest.Model.Manager

@{
    ViewBag.Title = "AddManager";
}

<h2>Add A Manager</h2>

<div class="row">
    <div class="col-xs-offset-1 col-xs-10">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label>Manager Name</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter Manager Name" })
                @Html.ValidationMessageFor(m => m.Name)
                <br />

                <label>Manager Password</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter Manager Password" })
                @Html.ValidationMessageFor(m => m.Password)
                <br />

                <button class="btn btn-md btn-danger">Cancel</button>&nbsp;&nbsp;
                <button type="submit" class="btn btn-md btn-primary">Save</button>&nbsp;&nbsp;
                <br />
              
                <br />
            </div>
        }
        </div>
    </div>